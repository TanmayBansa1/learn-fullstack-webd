generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//creating a todo model system
model User{
  id Int @id @default(autoincrement())
  email String @unique
  firstname String?
  lastname String?
  password String
}

model Todo{
  id Int @id @default(autoincrement())
  title String
  description String?
  completed Boolean @default(false)
  user_id  Int 
}
